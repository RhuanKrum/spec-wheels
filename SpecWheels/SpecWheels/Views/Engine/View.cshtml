@model SpecWheels.Models.Engine.EngineModel

@{
    ViewBag.Title = "View Engine";
}

<fieldset class="form-group">
    @Html.AntiForgeryToken()
    <h4>Color details</h4>
    <hr />
    @Html.ValidationSummary()

    <div class="form-group">
        @Html.LabelFor(model => model.Name, new { @class = "form-control-label" })
        @Html.TextBoxFor(model => model.Name, new { @class = "form-control disabled", @readonly = "readonly" })
    </div>
    <div class="form-group has-error">
        @Html.LabelFor(model => model.Brand, new { @class = "form-control-label" })
        @Html.TextBoxFor(model => model.Brand, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Brand)
    </div>
    <div class="form-group has-error">
        @Html.LabelFor(model => model.HorsePower, new { @class = "form-control-label" })
        @Html.TextBoxFor(model => model.HorsePower, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.HorsePower)
    </div>
    @Html.ActionLink("Edit", "Edit", "Engine", new { id = Model.Id }, new { @class = "btn btn-primary" })
    @Html.ActionLink("Delete", "Delete", "Engine", new { id = Model.Id }, new { @class = "btn btn-primary" })

</fieldset>
    