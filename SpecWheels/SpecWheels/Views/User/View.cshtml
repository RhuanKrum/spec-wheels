@model SpecWheels.Models.User.UserModel

@{
    ViewBag.Title = "View user";
}

<fieldset class="form-group">
    @Html.AntiForgeryToken()
    <h4>User details</h4>
    <hr />
    @Html.ValidationSummary()

    <div class="form-group">
        @Html.LabelFor(a => a.FirstName, new { @class = "form-control-label" })
        @Html.TextBoxFor(a => a.FirstName, new { @class = "form-control disabled", @readonly = "readonly" })
    </div>

    <div class="form-group">
        @Html.LabelFor(a => a.LastName, new { @class = "form-control-label" })
        @Html.TextBoxFor(a => a.LastName, new { @class = "form-control disabled", @readonly = "readonly" })
    </div>

    <div class="form-group">
        @Html.LabelFor(a => a.Nickname, new { @class = "form-control-label" })
        @Html.TextBoxFor(a => a.Nickname, new { @class = "form-control disabled", @readonly = "readonly" })
    </div>

    <div class="form-group">
        @Html.LabelFor(a => a.Email, new { @class = "form-control-label" })
        @Html.TextBoxFor(a => a.Email, new { @class = "form-control disabled", @readonly = "readonly" })
    </div>

    <div class="form-group">
        @Html.LabelFor(a => a.RegisterDate, new { @class = "form-control-label" })
        @Html.TextBoxFor(a => a.RegisterDate, new { @class = "form-control disabled", @readonly = "readonly" })
    </div>

    @*<div class="form-group">
        @Html.LabelFor(a => a.UserPrivacyLevel, new { @class = "form-control-label" })
        @Html.TextBoxFor(a => a.UserPrivacyLevel, new { @class = "form-control disabled", @readonly = "readonly" })
    </div>*@

</fieldset>