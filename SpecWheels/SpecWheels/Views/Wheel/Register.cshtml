@model SpecWheels.Models.Wheel.WheelModel

@{
    ViewBag.Title = "Register";
}

@using (Html.BeginForm("Register", "Wheel", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <fieldset class="form-group has-error">
        @Html.AntiForgeryToken()
        <h4>Register Wheel</h4>
        <hr />
        @Html.ValidationSummary()

        <div class="form-group has-error">
            @Html.LabelFor(model => model.Brand, new { @class = "form-control-label" })
            @Html.TextBoxFor(model => model.Brand, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Brand)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Name, new { @class = "form-control-label" })
            @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Name)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Size, new { @class = "form-control-label" })
            @Html.TextBoxFor(model => model.Size, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Size)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Color, new { @class = "form-control-label" })
            @Html.TextBoxFor(model => model.Color, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Color)
        </div>

        <div id="messages"></div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-primary" value="Register" />
            </div>
        </div>

    </fieldset>
}